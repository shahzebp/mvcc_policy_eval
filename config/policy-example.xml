<?xml version="1.0"?>
<policy>

  <rule name="access bank A first time">
    <object1Condition position="employee" history=""></object1Condition>
    <object2Condition name="bank A"></object2Condition>
    <action name="read"></action>
    <object1Update history="$object2.name"></object1Update>
  </rule>

  <rule name="access bank A again">
    <object1Condition position="employee" history="bank A"></object1Condition>
    <object2Condition name="bank A"></object2Condition>
    <action name="read"></action>
  </rule>

  <rule name="update bank A again">
    <object1Condition position="manager" history="bank A"></object1Condition>
    <object2Condition name="bank A"></object2Condition>
    <action name="update"></action>
  </rule>

  <rule name="access bank B first time">
    <object1Condition position="employee" history=""></object1Condition>
    <object2Condition name="bank B"></object2Condition>
    <action name="read"></action>
    <object1Update history="bank B"></object1Update>
  </rule>

  <rule name="access bank B again">
    <object1Condition position="employee" history="bank B"></object1Condition>
    <object2Condition name="bank B"></object2Condition>
    <action name="read"></action>
  </rule>

  <rule name="customers collectively can view each movie at most 5 times">
    <object1Condition position="customer"></object1Condition>
    <object2Condition type="movie" viewCount="&lt;5"></object2Condition>
    <action name="view"></action>
    <object2Update viewCount="++"></object2Update>
  </rule>

  <rule name="customers collectively can view each show at most 100 times">
    <object1Condition position="customer" age=">20"></object1Condition>
    <object2Condition type="show" viewCount="&lt;100"></object2Condition>
    <action name="view"></action>
    <object2Update viewCount="++"></object2Update>
  </rule>

 <rule name="player can watch a game atmost 2 times and game can be watched 3 times in total">
    <object1Condition position="player" age=">15" gameswatched="&lt;2"></object1Condition>
    <object2Condition type="game" viewCount="&lt;3"></object2Condition>
    <action name="watch"></action>
    <object1Update gameswatched="++"></object1Update>
  </rule>

  <rule name="player can watch a game atmost 2 times and game can be watched 3 times in total">
    <object1Condition position="player" age=">15" gameswatched="&lt;5"></object1Condition>
    <object2Condition type="game" viewCount="&lt;5"></object2Condition>
    <action name="play"></action>
    <object2Update viewCount="++"></object2Update>
  </rule>

</policy>